//// JavaScript Assignment: Strings
//// Instructions: Each section is labeled clearly. Read comments and observe expected outputs.

// ðŸ”¹ Q1. Declare and Print Strings
let fullName = "Muhammad Zakirullah";
console.log(fullName); // âž¤ Muhammad Zakirullah

let favouriteLanguage = "C++";
console.log(favouriteLanguage); // âž¤ C++

let quote = "Every Monkey can code but a clean and simple code is not the job of every programmer";
console.log(quote); // âž¤ The quote

console.log("--------------------------------------------------");

// ðŸ”¹ Q2. String Indexing
console.log(`First character: ${fullName[0]}`); // âž¤ M
console.log(`Last character: ${fullName[fullName.length - 1]}`); // âž¤ h
console.log(`Out-of-range: ${fullName[50]}`); // âž¤ undefined

console.log("--------------------------------------------------");

// ðŸ”¹ Q3. String Length and Casing
console.log(quote.toUpperCase()); // âž¤ UPPERCASE
console.log(quote.toLowerCase()); // âž¤ lowercase
console.log(`Length of quote: ${quote.length}`); // âž¤ Number of characters

console.log("--------------------------------------------------");

// ðŸ”¹ Q4. Whitespace Trimming
let messy = "   Learn JavaScript    ";
console.log(`Original: '${messy}'`);
console.log(`Original length: ${messy.length}`);

let messyTrimmed = messy.trim();
console.log(`Trimmed: '${messyTrimmed}'`);
console.log(`Trimmed length: ${messyTrimmed.length}`);

console.log("--------------------------------------------------");

// ðŸ”¹ Q5. Slice and Substring
let word = "JavaScript";
console.log(word.substring(0, 4)); // âž¤ Java
console.log(word.substring(4)); // âž¤ Script
console.log(word.slice(-6)); // âž¤ Script

console.log("--------------------------------------------------");

// ðŸ”¹ Q6. Replace and Includes
let line = "JavaScript is awesome. JavaScript is powerful.";

// Replace only the first occurrence
line = line.replace("JavaScript", "JS");
console.log(line);

// Check if "awesome" is included
console.log(`Includes 'awesome'? ${line.includes("awesome")}`); // âž¤ true

// Check if "Python" is included
console.log(`Includes 'Python'? ${line.includes("Python")}`); // âž¤ false

console.log("--------------------------------------------------");

// ðŸ”¹ Q7. Compare Strings Ignoring Case
let a = "HELLO";
let b = "hello";

console.log("a == b:", a == b); // âž¤ false (case-sensitive)

a = a.toLowerCase();
b = b.toLowerCase();
console.log("a === b (lowercase):", a === b); // âž¤ true

console.log("--------------------------------------------------");

// ðŸ”¹ Q8. Manual String Reverse (No loops/functions)
let name = "abcdefgh";
console.log(name[7] + name[6] + name[5] + name[4] + name[3] + name[2] + name[1] + name[0]); // âž¤ hgfedcba

console.log("--------------------------------------------------");

// ðŸ”¹ Q9. Count Leading/Trailing Spaces
let text = "   Code with discipline   ";
let trimmed = text.trim();
let trimmedStart = text.trimStart();
let trimmedEnd = text.trimEnd();

console.log("Total spaces removed:", text.length - trimmed.length);
console.log("Leading spaces:", text.length - trimmedStart.length);
console.log("Trailing spaces:", text.length - trimmedEnd.length);

console.log("--------------------------------------------------");

// ðŸ”¹ Q10. Detect Word Without .includes()
let sentence = "JavaScript is the language of the web.";

if (sentence.indexOf("language") !== -1) {
    console.log("Found");
} else {
    console.log("Not Found");
}
